<?xml version="1.0" encoding="UTF-8"?>
<!-- Enhanced dialog for Login Prompt component with redirect controls -->
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Login Prompt"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <gotoPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Goto path (destino pós-login)"
                        name="./gotoPath"
                        emptyText="/content/gogstore/us/en/home.html"/>
                    <showLogout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        text="Exibir botão de logout quando autenticado"
                        name="./showLogout"
                        value="true"
                        uncheckedValue="false"/>
                    <shouldRedirect
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        text="Ativar redirecionamento automático após login"
                        name="./shouldRedirect"
                        value="true"
                        uncheckedValue="false"/>
                    <redirectionTimeout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                        fieldLabel="Tempo de redirecionamento (segundos)"
                        name="./redirectionTimeout"
                        min="0"
                        max="60"
                        step="1"
                        value="3"
                        emptyText="3"/>
                    <postLoginDestination
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Página de destino após login"
                        name="./postLoginDestination"
                        emptyText="/content/gogstore/us/en/home"
                        rootPath="/content"
                        suffix=".html"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
